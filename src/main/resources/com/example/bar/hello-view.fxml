<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.bar.HelloController"
      spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Cocktail bar" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="5">
        <TextField fx:id="clientNameField" promptText="Nom du client"/>
        <Button text="Add client" onAction="#onAddClient"/>
        <Button text="Remove client" onAction="#onRemoveClient"/>
    </HBox>

    <TableView fx:id="clientsTable" prefHeight="150">
        <columns>
            <TableColumn fx:id="clientNameColumn" text="Client" prefWidth="150"/>
            <TableColumn fx:id="clientStatusColumn" text="Status" prefWidth="150"/>
        </columns>
    </TableView>

    <Separator/>

    <HBox spacing="5">
        <ComboBox fx:id="cocktailCombo" promptText="Choose a cocktail"/>
        <Button text="Add to order" onAction="#onAddCocktailToOrder"/>
        <Button text="Remove from order" onAction="#onRemoveCocktailFromOrder"/>
    </HBox>

    <TableView fx:id="orderCocktailsTable" prefHeight="150">
        <columns>
            <TableColumn fx:id="cocktailNameColumn" text="Cocktail" prefWidth="150"/>
            <TableColumn fx:id="cocktailPriceColumn" text="Price (€)" prefWidth="80"/>
            <TableColumn fx:id="cocktailQuantityColumn" text="Quantity (cl)" prefWidth="100"/>
        </columns>
    </TableView>

    <HBox spacing="5">
        <Button text="Create order" onAction="#onCreateOrder"/>
        <Button text="Serve order" onAction="#onServeOrder"/>
        <Button text="Invoice" onAction="#onBillOrder"/>
        <Label fx:id="billLabel" text="Total : 0 €"/>
    </HBox>

    <Separator/>

    <HBox spacing="5">
        <Button text="Start Happy Hour" onAction="#onStartHappyHour"/>
        <Button text="End Happy Hour" onAction="#onEndHappyHour"/>
    </HBox>

</VBox>
